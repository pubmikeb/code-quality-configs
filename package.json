	},
	"scripts": {
		"format:check": "prettier --check . --config ./prettier.config.mjs",
		"format:fix": "prettier --write . --config ./prettier.config.mjs",
		"lint:check": "eslint --config ./linters/eslint.config.mjs",
		"lint:check:cache": "eslint --cache --config ./linters/eslint.config.mjs",
		"lint:fix": "eslint --fix --config ./linters/eslint.config.mjs",
		"typecheck": "tsc --noEmit"
	},
	"type": "module",
	"version": "1.0.0"
